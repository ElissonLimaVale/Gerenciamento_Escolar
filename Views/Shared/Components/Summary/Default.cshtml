@{
    if (ViewData.ModelState.ErrorCount > 0)
    {
        <div class="alert alert-danger fade in">
            <button class="close" data-dismiss="alert">
                x
            </button>
            <i class="fa-fw fade fa-times"></i>
            <strong></strong>
            <div asp-validation-summary="ModelOnly" class="mensagemRetornoError"></div>
        </div>
    }
    if (!string.IsNullOrEmpty(ViewBag.Sucesso))
    {
        <div class="alert alert-success fade in">
            <button class="close" data-dismiss="alert">
                x
            </button>
            <i class="fa-fw fade fa-times"></i>
            <strong></strong>
            <div class="mensagemRetornoSucesso">@ViewBag.Sucesso</div>
        </div>
    }
    if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success fade in">
            <button class="close" data-dismiss="alert">
                x
            </button>
            <i class="fa-fw fade fa-times"></i>
            <strong></strong>
            <div class="mensagemRetornoSucesso">@Html.Raw(TempData["Sucesso"]).ToString()</div>
        </div>
    }
}