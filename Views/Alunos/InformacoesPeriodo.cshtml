@model List<AlunoViewModel>
@section sitemap {
    <ol class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li><a asp-controller="Alunos" asp-action="Index">Alunos</a></li>
        <li>Lista</li>
    </ol>
}

<div class="ui-widget-content">
    <div class="widget-header">
        <div class="text-center">
            <h2>Informações dos Príodos do Aluno</h2>
        </div>
    </div>
    <div class="widget-body">
        <fieldset>
            <div class="row">
                <section class="col-md-3">
                    <div class="input-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-search"></i></span>
                            <input id="search" type="text" class="form-control" placeholder="Filtrar" />
                        </div>
                    </div>
                </section>
                <section class="col-md-3 right">
                    <a href="#" id="baixar" class="btn btn-default right">
                        <i class="fa fa-dropbox"></i>
                        Baixar PDF
                    </a>
                </section>
            </div>
        </fieldset>

        <div class="row">
            <div class="striped" id="table-info">
                <!-- AQUI É RENDERIZADO O TABULATOR -->
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.5/jspdf.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.0.5/jspdf.plugin.autotable.js"></script>
    <script src="~/js/alunos/table.info.js"></script>
}
