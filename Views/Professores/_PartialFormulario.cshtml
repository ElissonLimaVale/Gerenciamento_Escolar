@model ProfessorViewModel
@{
    var ListTurmas = ViewBag.Turmas as List<SelectListItem>;
}

@using (Html.BeginFormCustom("FormCadastrarProfessor", "", @ViewBag.Action as string))
{
    @using (Html.BeginFieldSetCustom("Dados do Professor"))
    {
        @Html.AntiForgeryToken()
        @Html.TextBoxCustomFor(x => x.Nome, 4, icone: "fa fa-user")
        @Html.TextBoxCustomFor(x => x.Email, 4, icone: "fa fa-envelope")
        @Html.TextBoxCustomFor(x => x.Telefone, 4, icone: "fa fa fa-phone")

        @Html.TextBoxCustomFor(x => x.Disciplina, 6, icone: "fa fa-address-book")
        @Html.DropDownListCustomFor(x => x.Turmas, ListTurmas, 6)
    }

    @using (Html.BeginFieldSetCustom("Informações de Endereço"))
    {
        @Html.TextBoxCustomFor(x => x.Endereco.Cep, 4, icone: "fa fa-map-marker", htmlAttributes: new { @class = "mascara-cep" })
        @Html.TextBoxCustomFor(x => x.Endereco.Pais, 4, icone: "fa fa-map-marker")
        @Html.TextBoxCustomFor(x => x.Endereco.Estado, 4, icone: "fa fa-map-marker")

        @Html.TextBoxCustomFor(x => x.Endereco.Cidade, 4, icone: "fa fa-map-marker")
        @Html.TextBoxCustomFor(x => x.Endereco.Rua, 4, icone: "fa fa-map-marker")
        @Html.TextBoxCustomFor(x => x.Endereco.Numero, 4, icone: "fa fa-map-marker")

        @Html.TextAreaCustomFor(x => x.Endereco.Complemento)
    }

    <!-- CAMPOS IMPLICITOS -->
    @if (!(ViewBag.Action as string).Equals("Cadastrar"))
    {
        <input asp-for="Id" hidden />
        <input asp-for="EnderecoId" hidden />
        <input asp-for="Endereco.Id" hidden />
    }
}

